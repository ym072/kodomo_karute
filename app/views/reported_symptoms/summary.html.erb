<% content_for :title, "kodomo-karute - 症状記録" %>

<main class="login-main">
  <div class="summary-header">
    <h2>症状サマリー</h2>
  </div>

  <div class="tabs-wrap">
    <div class="tabs">
      <%= link_to "今日",
            summary_kid_reported_symptoms_path(@kid, tab: "today"),
            class: "tab #{@tab == 'today' ? 'active' : ''}" %>

      <%= link_to "全期間",
            summary_kid_reported_symptoms_path(@kid, tab: "all"),
            class: "tab #{@tab == 'all' ? 'active' : ''}" %>
    </div>

    <div class="tab-content">
      <% if @disease_record.nil? %>
        <p class="muted">現在記録中の体調不良はありません。</p>
      <% else %>
      <% if @tab == "today" %>
        <h3><%= Date.today %>（発症 <%= @day_count %> 日目）</h3>

        <div class="disease-name-status">
          <% if @disease_record.name.present? %>
            <span class="disease-name-label"></span>
            <span class="disease-name-value"><%= @disease_record.name %></span>
          <% else %>
            <span class="disease-name-empty">病名は未登録です</span>
          <% end %>
        </div>

        <% if @latest_temperature %>
          <p>
            最新体温：
            <%= @latest_temperature.body_temperature %>℃
            （<%= l @latest_temperature.recorded_at, format: :short %>）
          </p>
        <% else %>
          <p>本日の体温記録はありません</p>
        <% end %>

        <% if @vomit_count > 0 %>
          <p>
            嘔吐：<%= @vomit_count %>回
            （<%= @symptom_day_counts[SymptomName.find_by(name: "嘔吐").id] %>日目）
          </p>
        <% end %>

        <% if @diarrhea_count > 0 %>
          <p>
            便：<%= @diarrhea_count %>回
            （<%= @symptom_day_counts[SymptomName.find_by(name: "便").id] %>日目）
          </p>
        <% end %>

        <ul>
          <% @today_symptom_names.each do |s| %>
            <% next if ["嘔吐", "便"].include?(s.symptom_name.name) %>

            <li>
              <%= s.symptom_name.name %>:
              <%= @symptom_day_counts[s.symptom_name_id] %>日目
            </li>
          <% end %>
        </ul>
        <% if @today_memos.present? %>
          <div class="today-memo">
            <p class="today-memo-title">メモ</p>

            <% @today_memos.each do |m| %>
              <p class="today-memo-item">
                <span class="today-memo-time"><%= l m.recorded_at, format: :short %></span><br>
                <%= simple_format(h(m.memo), { class: "today-memo-text" }, wrapper_tag: "div") %>
              </p>
            <% end %>
          </div>
        <% end %>
        <div class="today-edit-wrap">
          <%= link_to "今日の記録を修正する",
            daily_edit_kid_reported_symptoms_path(@kid, date: Date.today),
            class: "login-botton" %>
        </div>
      <% end %>

      <% if @tab == "all" %>
        <div class="symptom-legend">
          <% @symptom_slots.each do |key, label| %>
          <% end %>
        </div>

        <section class="streak">
          <h3 class="section-title">続いている症状（今日）</h3>

          <% if @active_symptoms.present? %>
            <div class="streak-cards">
              <% @active_symptoms.each do |s| %>
                <div class="streak-card">
                  <span class="streak-dot <%= s[:key] %>"></span>
                  <span class="streak-label"><%= s[:label] %></span>
                  <% if s[:days].present? %>
                    <span class="streak-days"><%= s[:days] %>日目</span>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="muted">今日は記録された症状はありません</p>
          <% end %>
        </section>

        <section class="daily-log">
          <h3 class="section-title">これまでの経過</h3>

          <% [:last, :this].each do |week_key| %>
            <div class="week-card">
              <div class="week-title"><%= week_key == :this ? "今週" : "先週" %></div>

              <% @weeks[week_key].each do |date| %>
                <% items = @daily_symptoms[date] || [] %>

                <div class="day-item">
                  <div class="day-date">
                    <span class="day-wday"><%= date.strftime("%a") %></span>
                    <span class="day-md"><%= date.strftime("%-m/%-d") %></span>
                  </div>

                  <div class="day-tags">
                    <% if items.any? %>
                      <% items.each do |t| %>
                        <% if t[:key] == :memo %>
                          <% memos = @memos_for_calendar[date] || [] %>
                          <button type="button"
                                  class="tag memo memo-tag"
                                  data-memos="<%= json_escape(memos.to_json) %>">
                            メモ
                          </button>
                        <% else %>
                          <span class="tag <%= t[:key] %>"><%= t[:label] %></span>
                        <% end %>
                      <% end %>
                    <% else %>
                      <span class="muted">症状なし</span>
                    <% end %>
                  </div>
                  <%= link_to "…",
                    daily_edit_kid_reported_symptoms_path(@kid, date: date),
                    class: "day-more" %>
                </div>
              <% end %>
            </div>
          <% end %>
        </section>

        <div id="memo-popup" class="popup is-hidden">
          <div class="popup-content">
            <p class="memo-popup-title">メモ</p>
            <div id="memo-popup-body"></div>

            <button type="button" class="start-button" id="memo-popup-close">
              閉じる
            </button>
          </div>
        </div>

        <div class="symptom-trend">
          <h3 class="section-title">体温/嘔吐/便の推移</h3>

          <canvas id="symptomTrendChart" data-chart="<%= json_escape(@chart_data.to_json) %>"></canvas>
        </div>
      <% end %>
      <% end %>
    </div>
  </div>

  <div class="footer">
    <p><%= @kid.name %></p>
  </div>
</main>
